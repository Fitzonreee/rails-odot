<h1 class="well">All ToDo Lists</h1>

  <% @todo_lists.each do |todo_list| %>
    <div class="panel panel-default todo_list" id="<%= dom_id(todo_list) %>">
      <div class="panel-heading"><h2><%= todo_list.title %></h2></div>
      <div class="panel-body">
        <p><%= todo_list.description %></p>
        <ul class="functions pull-right">
          <li class="btn btn-default btn-s"><%= link_to icon('list'), todo_list_todo_items_path(todo_list) %></li>
          <li class="btn btn-primary btn-s"><%= link_to icon('eye'), todo_list %></li>
          <li class="btn btn-warning btn-s"><%= link_to icon('pencil-square-o'), edit_todo_list_path(todo_list) %></li>
          <li class="btn btn-danger btn-s"><%= link_to icon('trash'), todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
    </div>
    <br class="clear">
  <% end %>
<br>
